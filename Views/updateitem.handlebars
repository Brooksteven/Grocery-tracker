<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-5'>
      <h2>Update Item</h2>
      <small id='updateItemHelp' class='form-text text-muted'>NOTE: The Recipient and description fields cannot be blank.</small>
      <form class='form updateItemForm'>
        <div class='form-group'>
          <label for='email-login'>Recipient</label>
          <input type='text' class='form-control' id='itemItemee' value='{{item.recipientName}}'>
        </div>
        <div class='form-group'>
          <label for='password-login'>Description</label>
          <input type='text' class='form-control' id='itemDescription' value='{{item.description}}'>
        </div>
        <div class='form-group'>
          <label class="switch">Purchased</label>
          <input type="checkbox" id="itemPurchased" {{#if item.purchased}}checked{{/if}}>
        </div>
        <button class='btn btn-primary submit' id='itemSave' type='submit'>Save</button>
        <button class='btn btn-warning submit' id='itemCancel' type='reset'>Cancel</button>
      </form>
    </div>
  </div>
</div>

<script src="/js/updateitem.js"></script>