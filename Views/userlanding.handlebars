<div class='container-fluid'>
            <section id='btn-add-item' class='add-item-btn'>
                <div class='d-flex flex-row-reverse col-12'>
                    <button class='btn btn-warning'>+ Add Item</button>
                </div>
            </section>
            
            <section class='item-list'>
                <div class='col-12'>
                    <div class='card'>
                        <h3 class='card-header'>My Item List</h3>
                        <table class='table table-hover'>
                            <thead>
                                <tr>
                                    <th scope='col'>Recipient</th>
                                    <th scope='col'>Description</th>
                                    <th scope='col'>Item Complete</th>
                                    <th scope='col'></th>
                                </tr>
                            </thead>
                    {{#if item.length}}
                        {{#each items as |item|}}
                        <tbody>
                            <tr><a href='/item/{{item.id}}'></a>
                                <td scope='row'>{{item.recipientName}}</th>
                                <td id='description'>{{item.description}}</td>
                                <td id='purchased'>{{#if item.purchased}}Yes{{else}}No{{/if}}</td>
                                <td class='edit-btns'>
                                    <button class='btn btn-warning edit-item-btn' data-id='{{item.id}}'>Update</button>
                                    <button id="deleteBtn" class='btn btn-danger delete-item-btn' data-id='{{item.id}}'>Delete</button>
                                    
                                </td>
                            </tr>
                        </tbody>
                        {{/each}}
                    {{/if}}
                    </div>
                </div>
            </section>
        </div>

<script src='./js/userlanding.js'></script>